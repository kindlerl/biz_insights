{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "ListBronzeAndAthenaPrefixes",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket"
            ],
            "Resource": "arn:aws:s3:::bus-insights-dev-us-east-1",
            "Condition": {
                "StringLike": {
                    "s3:prefix": [
                        "bronze/*",
                        "athena/*"
                    ]
                }
            }
        },
        {
            "Sid": "ReadBronzeObjects",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject"
            ],
            "Resource": "arn:aws:s3:::bus-insights-dev-us-east-1/bronze/*"
        },
        {
            "Sid": "WriteBronzeObjects",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:DeleteObject"
            ],
            "Resource": "arn:aws:s3:::bus-insights-dev-us-east-1/bronze/*"
        },
        {
            "Sid": "ReadWriteAthenaResults",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:DeleteObject"
            ],
            "Resource": "arn:aws:s3:::bus-insights-dev-us-east-1/athena/*"
        }
    ]
}
